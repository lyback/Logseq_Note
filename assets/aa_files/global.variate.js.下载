var loca = window.location,
	// API = loca.protocol + '//' + loca.host + '/' + SYXZ.API_DOMAIN + '?',
    API = loca.protocol + '//' + loca.host + '/api?',
    WWWAPI = '/wwwapi?';
// 播放器队列（视频、音频）
window.dynamicPlayers = {};
// 视频播放队列
window.dynamicVideos = [];
// 防抖函数
window.debounce = function(func, wait) {
    var timer;
    return function () {
        var context = this;
        var args = arguments;
        if (timer) clearTimeout(timer);
        timer = setTimeout(function() {
        	func.apply(context, args);
        }, wait);
    }
}

window.initLoginPopper = function() {
	$("body").loginWrap({
        type:"login"
    })
}

$(function() {
	$('.is_tong_ji[is_tong_ji = "1"]').on('click', function() {
		var oId = $(this).attr('data_oid');
		$.ajax({
			url: API + 'c=Operating&a=operatingClick&op_id=' + oId,
			type: 'get'
		}).done(function(){})
	});
	$('.syxz-list_wrapper').on('click', '.is_tong_ji[is_tong_ji = "1"]', function() {
		var oId = $(this).attr('data_oid');
		$.ajax({
			url: API + 'c=Operating&a=operatingClick&op_id=' + oId,
			type: 'get'
		}).done(function(){})
	});

	// 监测用户的行为
	function monitor(target, targetId) {
		$.ajax({
			url: API + 'c=My&a=myView',
			type: 'POST',
			data: {
				target: target,
				target_id: targetId
			}
		}).done(function() {})
	}
	if($('input[name="is_need_record"]').val()) {
		var target = $('input[name="target_type"]').val()
		var targetId = $('input[name="id"]').val()
		monitor(target, targetId)
	}
})
